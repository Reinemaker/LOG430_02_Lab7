{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "MongoDB": "mongodb://admin:password@mongodb:27017",
    "Redis": "redis:6379"
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5000"
      }
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:4200",
      "http://localhost:8080",
      "https://localhost:3000",
      "https://localhost:4200",
      "https://localhost:8080"
    ],
    "AllowCredentials": true
  },
  "Jwt": {
    "Issuer": "CornerShopAPI",
    "Audience": "CornerShopClients",
    "SecretKey": "SuperSecretKeyForJwtToken1234567890!!"
  }
} 