@model CornerShop.Models.Store
@{
    Layout = "_Layout";
    ViewData["Title"] = "Create Store";
}
<h2>Create Store</h2>
<form asp-action="Create" method="post">
    <div>
        <label for="Name">Store Name</label><br />
        <input asp-for="Name" id="Name" placeholder="Enter store name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label for="Location">Location</label><br />
        <input asp-for="Location" id="Location" placeholder="Enter store location" />
        <span asp-validation-for="Location"></span>
    </div>
    <button type="submit">Create</button>
</form>
<a href="@Url.Action("Index", "Store")">Back to List</a> 