@model CornerShop.Models.SaleDetailsViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Sale Details";
    var usCulture = System.Globalization.CultureInfo.GetCultureInfo("en-US");
}
<h2>Sale Details</h2>
<div class="mb-3">
    <a href="@Url.Action("Index", "Sale", new { storeId = Model.Sale.StoreId })" class="btn btn-secondary">Back to Sales</a>
</div>
<div class="card mb-3">
    <div class="card-body">
        <h4 class="card-title">Store: @Model.StoreName</h4>
        <h6 class="card-subtitle mb-2 text-muted">Location: @Model.StoreLocation</h6>
        <p class="card-text">Sale Date: @Model.Sale.Date.ToString("yyyy-MM-dd HH:mm")</p>
        <p class="card-text">Sale Status: @Model.Sale.Status</p>
    </div>
</div>
<h5>Products Sold</h5>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Items)
    {
        <tr>
            <td>@item.ProductName</td>
            <td>@item.Quantity</td>
            <td>@item.Price.ToString("C", usCulture)</td>
            <td>@item.Total.ToString("C", usCulture)</td>
        </tr>
    }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3" class="text-end">Subtotal</th>
            <th>@Model.Subtotal.ToString("C", usCulture)</th>
        </tr>
    </tfoot>
</table> 