{
  "dashboard": {
    "id": null,
    "title": "Choreographed Saga Monitoring",
    "tags": ["saga", "choreographed", "microservices"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Saga Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "choreographed_saga_started_total",
            "legendFormat": "Started"
          },
          {
            "expr": "choreographed_saga_completed_total",
            "legendFormat": "Completed"
          },
          {
            "expr": "choreographed_saga_failed_total",
            "legendFormat": "Failed"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "list",
              "orientation": "horizontal"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Saga Success Rate",
        "type": "gauge",
        "targets": [
          {
            "expr": "rate(choreographed_saga_completed_total[5m]) / rate(choreographed_saga_started_total[5m]) * 100",
            "legendFormat": "Success Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 80
                },
                {
                  "color": "green",
                  "value": 95
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Saga Duration Distribution",
        "type": "histogram",
        "targets": [
          {
            "expr": "rate(choreographed_saga_duration_seconds_bucket[5m])",
            "legendFormat": "{{le}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Saga Events Over Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(choreographed_saga_started_total[5m])",
            "legendFormat": "Started"
          },
          {
            "expr": "rate(choreographed_saga_completed_total[5m])",
            "legendFormat": "Completed"
          },
          {
            "expr": "rate(choreographed_saga_failed_total[5m])",
            "legendFormat": "Failed"
          },
          {
            "expr": "rate(choreographed_saga_compensation_triggered_total[5m])",
            "legendFormat": "Compensations"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 1,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {
                "mode": "none",
                "group": "A"
              },
              "axisPlacement": "auto",
              "axisLabel": "",
              "scaleDistribution": {
                "type": "linear"
              },
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 5,
        "title": "Compensation Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(choreographed_saga_compensation_triggered_total[5m]) / rate(choreographed_saga_started_total[5m]) * 100",
            "legendFormat": "Compensation Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 5
                },
                {
                  "color": "red",
                  "value": 10
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 6,
        "title": "Active Sagas",
        "type": "stat",
        "targets": [
          {
            "expr": "choreographed_saga_started_total - choreographed_saga_completed_total - choreographed_saga_failed_total",
            "legendFormat": "Active Sagas"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 10
                },
                {
                  "color": "red",
                  "value": 50
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        }
      },
      {
        "id": 7,
        "title": "Saga Status Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "choreographed_saga_completed_total",
            "legendFormat": "Completed"
          },
          {
            "expr": "choreographed_saga_failed_total",
            "legendFormat": "Failed"
          },
          {
            "expr": "choreographed_saga_started_total - choreographed_saga_completed_total - choreographed_saga_failed_total",
            "legendFormat": "In Progress"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              }
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 32
        }
      },
      {
        "id": 8,
        "title": "Saga Step Completion",
        "type": "bargauge",
        "targets": [
          {
            "expr": "sum by (step) (rate(saga_step_completed_total[5m]))",
            "legendFormat": "{{step}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "gradient",
              "orientation": "horizontal"
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 32
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "5s",
        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h",
        "2h",
        "1d"
      ]
    },
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "refresh": "10s",
    "schemaVersion": 27,
    "version": 1,
    "links": [],
    "gnetId": null,
    "uid": "choreographed-saga-dashboard"
  }
} 